<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <statusListener class="ch.qos.logback.core.status.NopStatusListener"/>
    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
                %d{HH:mm:ss.SSS} [%thread] %-5level %logger{5} - %msg%n
            </Pattern>
        </layout>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>TRACE</level>
        </filter>
    </appender>

    <!--    <appender name="hybrisLog" class="ch.qos.logback.core.FileAppender">
            <file>${rebel.workspace.path}\\src\\main\\resources\\hybris.log</file>
            <encoder>
                <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{5} - %msg%n</pattern>
            </encoder>
            <param name="Append" value="false" />
        </appender>-->

    <logger name="de.andre" level="debug"/>

    <logger name="org.springframework" level="error"/>
    <logger name="org.springframework.beans.TypeConverterDelegate" level="error"/>

    <!--<logger name="org.hibernate.type" level="trace"/>-->
    <logger name="org.hibernate" level="error"/>

    <logger name="com.zaxxer" level="error"/>
    <logger name="org.thymeleaf" level="error"/>

    <root level="debug">
        <appender-ref ref="stdout"/>
        <!--<appender-ref ref="hybrisLog"/>-->
    </root>


</configuration>