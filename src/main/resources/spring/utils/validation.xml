<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="forgotPasswordFormValidator" class="de.andre.utils.validation.ForgotPasswordFormValidator"/>

    <bean id="addressValidator" class="de.andre.utils.validation.AddressValidator">
        <constructor-arg name="addressTools" ref="addressTools"/>
        <constructor-arg>
            <map>
                <description>Required fields names to error codes map.</description>
                <entry key="city" value="address.city.empty"/>
                <entry key="postalCode" value="address.postalCode.empty"/>
                <entry key="address" value="address.address.empty"/>
                <entry key="countryCode" value="address.countryCode.empty"/>
                <entry key="state" value="address.state.empty"/>
            </map>
        </constructor-arg>
    </bean>

    <bean id="profileValidator" class="de.andre.utils.validation.ProfileValidator">
        <constructor-arg name="accountTools" ref="accountTools"/>
        <constructor-arg name="requiredFields">
            <map>
                <description>Required fields names to error codes map.</description>
                <entry key="email" value="email.empty"/>
                <entry key="firstName" value="firstName.empty"/>
                <entry key="dateOfBirth" value="dateOfBirth.empty"/>
            </map>
        </constructor-arg>
    </bean>
</beans>